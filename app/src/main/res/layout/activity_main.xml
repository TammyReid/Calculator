    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#cccccc"
            android:elevation="0dp"
            android:hint="clear"
            android:text="AC"
            android:textStyle="bold" />



        <Button
            android:id="@+id/mm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#cccccc"
            android:hint="Memory"
            android:text="+/-"
            android:textStyle="bold" />

        <Button
            android:id="@+id/percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#cccccc"
            android:hint="percent"
            android:text="%"
            android:textStyle="bold" />

        <Button
            android:id="@+id/division"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ff9900"
            android:hint="division"
            android:text="&#247;"
            android:textStyle="bold"
            tools:background=" #ff9900 " />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        android:weightSum="1">

        <Button
            android:id="@+id/num7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#cccccc"
            android:hint="7"
            android:text="7"
            android:textStyle="bold" />

        <Button
            android:id="@+id/num8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#cccccc"
            android:hint="8"
            android:text="8"
            android:textStyle="bold" />

        <Button
            android:id="@+id/num9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#cccccc"
            android:hint="9"
            android:text="9"
            android:textStyle="bold" />

        <Button
            android:id="@+id/multiply1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ff9900"
            android:hint="x"
            android:text="X"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        android:weightSum="1">

        <Button
            android:id="@+id/num4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#cccccc"
            android:hint="4"
            android:text="4"
            android:textStyle="bold" />

        <Button
            android:id="@+id/num5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#cccccc"
            android:hint="5"
            android:text="5"
            android:textStyle="bold" />

        <Button
            android:id="@+id/num6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#cccccc"
            android:hint="6"
            android:text="6"
            android:textStyle="bold" />

        <Button
            android:id="@+id/subtract1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ff9900"
            android:hint="-"
            android:text="-"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        android:weightSum="1" >

        <Button
            android:id="@+id/num1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#cccccc"
            android:hint="1"
            android:text="1"
            android:textStyle="bold" />

        <Button
            android:id="@+id/num2"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#cccccc"
            android:hint="2"
            android:text="2"
            android:textStyle="bold" />

        <Button
            android:id="@+id/num3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#cccccc"
            android:hint="3"
            android:text="3"
            android:textStyle="bold" />

        <Button
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ff9900"
            android:hint="plus"
            android:text="+"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        android:weightSum="1">


        <Button
            android:id="@+id/numzero"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#cccccc"
            android:hint="0"
            android:text="0"
            android:textStyle="bold" />


        <Button
            android:id="@+id/decimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#cccccc"
            android:hint="."
            android:text="."
            android:textStyle="bold" />

        <Button
            android:id="@+id/equal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ff9900"
            android:hint="equal"
            android:text="="
            android:textStyle="bold" />

    </LinearLayout>

